<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.ssafit.model.dao.TagDao">
	<select id="selectAll" resultType="tagDTO">
		select * from tag
	</select>
	 
	 <insert id="insert" parameterType="tagDTO" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
	 	insert 
	 		into tag
	 		values(0,#{name})
	 </insert>
	 <select id="selectByName" parameterType="string" resultType="tagDTO">
	 	select * from tag where name like #{name};
	 </select>
	 <delete id="delete" parameterType="int">
	 	delete
	 		from tag
	 		where id = #{id}
	 </delete>
	 
	 <select id="selectVideoTagsByUserId" parameterType="int" resultType="tagDTO">
	 	select distinct j.tag_id id, t.name name
			from user u 
				inner join zzim j 
			    on u.id = j.user_id
			    inner join tag t
			    on j.tag_id = t.id
		    where u.id=#{userId};
	 </select>
</mapper>