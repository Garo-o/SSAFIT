<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.ssafit.model.dao.ImageDao">
	<resultMap type="imageDTO" id="imageMap">
		<result column="id" property="id"/>
		<result column="file_name" property="fileName"/>
		<result column="file_location" property="fileLocation"/>
		<result column="user_id" property="userId"/>
		<result column="board_image_id" property="boardImageId"/>
	</resultMap>
	
	<insert id="insert" parameterType="imageDTO">
		insert
			into image
			values
			(0,#{fileName},#{fileLocation},#{userId},#{boardImageId})
	</insert>
	
	<update id="update" parameterType="imageDTO">
		update
			into image
			set
			file_name = #{fileName},
			file_location = #{fileLocation}
			where id = #{id}
	</update>
	
	<delete id="delete" parameterType="int">
		delete 
			from image
			where id = #{id}
	</delete>
</mapper>