<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.ssafit.model.dao.NotifyDao">
	<resultMap type="notifyDTO" id="notifyMap">
		<result column="id" property="id"/>
		<result column="user_id" property="userId"/>
		<result column="object_id" property="objectId"/>
		<result column="d_type" property="dType"/>
	</resultMap>

	<insert id="insert" parameterType="notifyDTO">
		insert 
			into notify
			values
			(0,#{userId}, #{objectId}, #{dType}, null)
	</insert>
	
	<select id="selectByUserId" parameterType="int" resultMap="notifyMap">
		select *
			from notify
			where user_id = #{id}
			and read_date is null
	</select>
	
	<update id="update" parameterType="int">
		update 
			into notify
			set read_date = now()
			where id=#{id}
	</update>
	
</mapper>